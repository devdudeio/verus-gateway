# Verus Gateway Environment Variables Example
# Copy this file to .env and customize for your environment

# Server Configuration
VERUS_GATEWAY_SERVER_PORT=8080
VERUS_GATEWAY_SERVER_HOST=0.0.0.0

# Default Chain
VERUS_GATEWAY_CHAINS_DEFAULT=vrsc

# Verus Mainnet (VRSC) - REQUIRED
VERUS_GATEWAY_CHAINS_VRSC_NAME="Verus Mainnet"
VERUS_GATEWAY_CHAINS_VRSC_ENABLED=true
VERUS_GATEWAY_CHAINS_VRSC_RPC_URL=http://localhost:27486
VERUS_GATEWAY_CHAINS_VRSC_RPC_USER=your_rpc_user
VERUS_GATEWAY_CHAINS_VRSC_RPC_PASSWORD=your_rpc_password
VERUS_GATEWAY_CHAINS_VRSC_RPC_TIMEOUT=30s

# Verus Testnet (VRSCTEST) - Optional
VERUS_GATEWAY_CHAINS_VRSCTEST_NAME="Verus Testnet"
VERUS_GATEWAY_CHAINS_VRSCTEST_ENABLED=true
VERUS_GATEWAY_CHAINS_VRSCTEST_RPC_URL=http://localhost:18843
VERUS_GATEWAY_CHAINS_VRSCTEST_RPC_USER=your_testnet_rpc_user
VERUS_GATEWAY_CHAINS_VRSCTEST_RPC_PASSWORD=your_testnet_rpc_password
VERUS_GATEWAY_CHAINS_VRSCTEST_RPC_TIMEOUT=30s

# Cache Configuration
VERUS_GATEWAY_CACHE_TYPE=filesystem
VERUS_GATEWAY_CACHE_DIR=./cache
VERUS_GATEWAY_CACHE_MAX_SIZE=1073741824
VERUS_GATEWAY_CACHE_TTL=24h

# Redis Cache (when CACHE_TYPE=redis)
# VERUS_GATEWAY_CACHE_REDIS_ADDRESSES=localhost:6379
# VERUS_GATEWAY_CACHE_REDIS_PASSWORD=
# VERUS_GATEWAY_CACHE_REDIS_DB=0

# CORS Configuration
VERUS_GATEWAY_SECURITY_CORS_ENABLED=true
VERUS_GATEWAY_SECURITY_CORS_ALLOWED_ORIGINS=*

# Rate Limiting
VERUS_GATEWAY_RATE_LIMIT_ENABLED=true
VERUS_GATEWAY_RATE_LIMIT_MAX_REQUESTS=30
VERUS_GATEWAY_RATE_LIMIT_WINDOW_SIZE=10s

# Logging
VERUS_GATEWAY_OBSERVABILITY_LOGGING_LEVEL=info
VERUS_GATEWAY_OBSERVABILITY_LOGGING_FORMAT=json

# Metrics
VERUS_GATEWAY_OBSERVABILITY_METRICS_ENABLED=true
VERUS_GATEWAY_OBSERVABILITY_METRICS_PORT=9090
